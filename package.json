    "test:integration": "npx tsx src/claude-direct/testing/run-all-tests.ts --integration",
    "test:benchmark": "npx tsx src/claude-direct/testing/run-all-tests.ts --benchmark",
    "test:all": "npx tsx src/claude-direct/testing/run-all-tests.ts --integration --benchmark"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.29",
    "zod": "^4.3.6"
  }
}
