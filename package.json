{
  "name": "pantainos-experiments",
  "version": "0.1.0",
  "description": "Experimental implementations and research for Pantainos",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "npx tsx src/claude-direct/testing/run-all-tests.ts",
